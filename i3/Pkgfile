# Description: i3 tiling window manager
# URL: http://i3wm.org/
# Maintainer:  Cory Burgett, cmburget at gmail dot com
# Depends on: pkg-config, xorg-libxcb, xorg-xcb-util, xorg-xcb-util-cursor, xorg-xcb-util-wm, xorg-xcb-util-keysyms, xkbcommon, libev, yajl, asciidoc, xmlto, docbook-xml, libpcre, startup-notification, pango, cairo

name=i3
version=4.11
release=1
source=(http://i3wm.org/downloads/$name-$version.tar.bz2)

build() {
	cd $name-$version

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc
}
