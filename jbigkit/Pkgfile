# Description: An implementation of the JBIG1 compression standard
# URL: http://www.cl.cam.ac.uk/~mgk25/jbigkit/
# Maintainer:  Cory Burgett, cmburget at gmail dot com
# Depends on:

name=jbigkit
version=2.1
release=2
source=(http://www.cl.cam.ac.uk/~mgk25/$name/download/$name-$version.tar.gz)

build() {
	cd $name-$version

	make

	mkdir -p $PKG/usr/lib
	mkdir -p $PKG/usr/include
	mkdir -p $PKG/usr/bin
	mkdir -p $PKG/usr/share/man/man1
	mkdir -p $PKG/usr/share/man/man5

	cp libjbig/*.a $PKG/usr/lib
	cp libjbig/*.h $PKG/usr/include

	cp pbmtools/jbgtopbm $PKG/usr/bin
	cp pbmtools/jbgtopbm85 $PKG/usr/bin
	cp pbmtools/pbmtojbg $PKG/usr/bin
	cp pbmtools/pbmtojbg85 $PKG/usr/bin

	cp pbmtools/jbgtopbm.1 $PKG/usr/share/man/man1
	cp pbmtools/pbmtojbg.1 $PKG/usr/share/man/man1
	cp pbmtools/pgm.5 $PKG/usr/share/man/man5
	cp pbmtools/pbm.5 $PKG/usr/share/man/man5
}
